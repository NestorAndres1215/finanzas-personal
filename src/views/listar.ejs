<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  crossorigin="anonymous" />

<body class="bg-gradient-to-br from-blue-50 to-gray-100 min-h-screen flex items-center justify-center p-4 font-sans">
  <div class="w-full max-w-4xl bg-white rounded-xl shadow-2xl p-8 transform transition-all hover:shadow-xl">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-8 flex items-center justify-center">
      <i class="fas fa-list-alt text-indigo-600 mr-2"></i> Lista de Transacciones
    </h1>
    <% if (transacciones.length===0) { %>
      <p class="text-center text-gray-500 italic">No hay transacciones para mostrar.</p>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full table-auto border-collapse">
            <thead>
              <tr class="bg-indigo-100 text-indigo-800">
                <th class="px-4 py-2 text-left"> Tipo</th>
                <th class="px-4 py-2 text-left"> Categoría</th>
                <th class="px-4 py-2 text-left">Monto</th>
                <th class="px-4 py-2 text-left">Descripción</th>
              </tr>
            </thead>
            <tbody>
              <% transacciones.forEach(t=> { %>
                <tr class="border-b border-gray-200 hover:bg-gray-50 transition duration-200">
                  <td class="px-4 py-3 <%= t.tipo === 'ingreso' ? 'text-green-600' : 'text-red-600' %>">
                    <i class="fas <%= t.tipo === 'ingreso' ? 'fa-arrow-down' : 'fa-arrow-up' %> mr-2"></i>
                    <%= t.tipo.charAt(0).toUpperCase() + t.tipo.slice(1) %>
                  </td>
                  <td class="px-4 py-3">
                    <%= t.categoria %>
                  </td>
                  <td class="px-4 py-3">$<%= t.monto %>
                  </td>
                  <td class="px-4 py-3">
                    <%= t.descripcion || 'Sin descripción' %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
        <% } %>
          <hr class="my-6 border-gray-200">
          <a href="/"
            class="block text-center text-indigo-600 hover:text-indigo-800 font-medium transition duration-200">
            <i class="fas fa-plus-circle mr-2"></i> Agregar nueva transacción
          </a>
  </div>
</body>